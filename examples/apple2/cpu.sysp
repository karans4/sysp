               (cpu-set-flag cpu FLAG_C)
               (cpu-clear-flag cpu FLAG_C))
           (let result (& (<< val 1) 255))
           (mem-write mem addr result)
           (cpu-update-nz cpu result)
           (set! cycles 7))]

      ;; --- LSR accumulator ---
      [(== op 74)
       (do (set! cpu.pc (& (+ cpu.pc 1) 65535))
           (let val cpu.a)
           ;; Old bit 0 -> carry
           (if (!= (& val 1) 0)
               (cpu-set-flag cpu FLAG_C)
               (cpu-clear-flag cpu FLAG_C))
           (let result (& (>> val 1) 255))
           (set! cpu.a result)
